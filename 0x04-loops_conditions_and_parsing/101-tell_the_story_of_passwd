#!/usr/bin/env bash
# displays the content of the file /etc/passwd, using the while loop + IFS.

passwd_file="/etc/passwd"

IFS=":"
while read -r user _ uid gid info homedir shell; do
    echo "The user $user is part of the $gid gang, lives in $homedir, and rides $shell."
    echo "$uid's place is protected by the passcode $user, more info about the user here: $uid $user"
done < "$passwd_file"
