#!/usr/bin/env bash
# displays the content of the file /etc/passwd, using the while loop + IFS.

passwd_file="/etc/passwd"

IFS=":"
while read -r username x uid gid info homedir shell; do
    echo "The user $username is part of the $gid gang, lives in $homedir, and rides $shell."
    echo "$uid's place is protected by the passcode $info, more info about the user here: $uid $info"
done < "$passwd_file"
